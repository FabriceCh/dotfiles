set $teal #179299 
set $lavender #7287FD
set $cyan #04a5e5
set $green #40A02B
set $pinky #dc8a78
set $orange #DF8E1D
set $red #d20f39
set $mauve #8839ef

# Class 			border		backgr.		text		indicator	child_border
client.focused  		$lavender  	$lavender          $white          $lavender  	$lavender	
client.unfocused $gray $gray $black $gray $gray
client.focused_inactive		$darkgray	$darkgray	$crust  	$darkgray	$darkgray
client.urgent           	$pinky  	$black  	$pinky	        $pinky  	$pinky
client.placeholder      	$colorin	$colorin	$colorin	$colorin 	$colorin


#
# SwayFX
#

blur enable
shadows enable
corner_radius 10

layer_effects "waybar" {
    blur enable;
    shadows enable;
}


layer_effects "wofi" {
    blur enable;
    corner_radius 10;
}

